<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MuseumDetailView">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#2660A4"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp" android:layout_marginBottom="20dp">
            <TextView
                    android:text="Museum Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtNameMuseumDetail"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#13315C" android:textSize="22sp" android:textStyle="bold"
                    android:gravity="center_horizontal"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="212dp" app:srcCompat="@drawable/museum1" android:id="@+id/imgDetailMuseum"
                    android:scaleType="fitXY"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginBottom="10dp">
                <TextView
                        android:text="Precio:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" android:textColorLink="#13315C" android:textColor="#13315C"
                        android:textSize="16sp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:textStyle="bold" android:layout_marginRight="10dp"/>
                <TextView
                        android:text="This is the price of the entrance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPriceMuseumDetail" android:textColorLink="#13315C"
                        android:textColor="#13315C"
                        android:textSize="16sp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Días de atención: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" android:textColorLink="#13315C" android:textColor="#13315C"
                        android:textSize="16sp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:textStyle="bold" android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Lunes martes mierocles jueve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtBusinessHoursMuseumDetail" android:textColorLink="#13315C"
                        android:textColor="#13315C"
                        android:textSize="16sp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Horarios de atencion:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView6"
                        android:textColorLink="#13315C" android:textColor="#13315C" android:textSize="16sp"
                        android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:textStyle="bold"
                        android:layout_marginRight="10dp"/>
                <TextView
                        android:text="13- 18 am"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtBusinessDaysMuseumDetail"
                        android:textColorLink="#13315C" android:textColor="#13315C" android:textSize="16sp"
                        android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>
                <TextView
                        android:text="Esta es la descripcion del museooo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtDescriptionMuseumDetail"
                        android:textColorLink="#13315C" android:textColor="#13315C" android:textSize="16sp"
                        android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" android:layout_marginBottom="20dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Button
                            android:text="Eventos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/btnEventsMuseumDetail"
                            android:backgroundTint="#13315C" android:textColor="#7BDFF2"
                            android:drawableLeft="@drawable/event32" android:layout_weight="1"
                            android:layout_marginLeft="10dp"/>
                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_weight="1"/>
                    <Button
                            android:text="Dirección"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/btnAddressMuseumDetail"
                            android:layout_weight="1"
                            android:backgroundTint="#13315C" android:textColor="#7BDFF2"
                            android:drawableLeft="@drawable/placeholder32" android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnStartJourney"
                    android:text="Iniciar Paseo" android:backgroundTint="#13315C" android:textColor="#7BDFF2"
                    android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>