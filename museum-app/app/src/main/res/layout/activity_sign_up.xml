<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity" android:background="@drawable/background">

    <Button
            android:text="Registrarse"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btn_singup"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:background="@drawable/rounded_button"
            android:textColor="@color/colorDarkText" android:textSize="18dp" android:alpha="0.9"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/btn_singup"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingStart="32dp" android:paddingEnd="32dp">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="75dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" app:srcCompat="@drawable/logo_museum"
                    android:id="@+id/imageView5" android:layout_marginTop="8dp"
                    android:alpha="0.9"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="64dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/ti_name"
                    android:textColorHint="@color/colorButtons">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombres" android:id="@+id/input_name" android:backgroundTint="@color/colorButtons"
                        android:textColorHint="@color/colorButtons" android:textColor="@color/colorLightText"
                        android:textColorHighlight="@color/colorHeader" android:textColorLink="@color/colorHeader"
                        android:textCursorDrawable="@color/colorHeader"/>
            </android.support.design.widget.TextInputLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:textColorHint="@color/colorButtons"
                    android:id="@+id/ti_last_name">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos" android:backgroundTint="@color/colorButtons"
                        android:textColor="@color/colorLightText" android:id="@+id/input_last_name"
                        android:textColorHint="@color/colorButtons"/>
            </android.support.design.widget.TextInputLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:textColorHint="@color/colorButtons"
                    android:id="@+id/ti_email">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo electrónico" android:textColor="@color/colorLightText"
                        android:inputType="textEmailAddress" android:backgroundTint="@color/colorButtons"
                        android:id="@+id/input_email" android:textColorHint="@color/colorButtons"/>
            </android.support.design.widget.TextInputLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:textColorHint="@color/colorButtons"
                    android:id="@+id/ti_user">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuario" android:textColor="@color/colorLightText"
                        android:backgroundTint="@color/colorButtons" android:id="@+id/input_user"
                        android:textColorHint="@color/colorButtons"/>
            </android.support.design.widget.TextInputLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="32dp"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:textColorHint="@color/colorButtons"
                    android:id="@+id/ti_password">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña" android:textColor="@color/colorLightText"
                        android:inputType="textPassword" android:backgroundTint="@color/colorButtons"
                        android:id="@+id/input_password" android:textColorHint="@color/colorButtons"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>