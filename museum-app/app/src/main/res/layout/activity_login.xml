<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/background">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo_museum"
            android:id="@+id/imageView3"
            android:scaleType="centerInside" android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:alpha="0.9"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ti_user" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ti_password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:textColorHint="@color/colorButtons" app:passwordToggleTint="@color/colorHeader"
            android:backgroundTint="@color/colorButtons">
        <EditText android:id="@+id/input_user"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:hint="Usuario" android:textColorHighlight="@color/colorHeader"
                  android:textColorLink="@color/colorHeader" android:textColor="@color/colorLightText"
                  android:textColorHint="@color/colorButtons" android:textCursorDrawable="@color/colorHeader"
                  android:shadowColor="@color/colorHeader"
                  android:backgroundTint="@color/colorButtons"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button3"
            android:id="@+id/ti_password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            android:backgroundTint="@color/colorButtons" android:textColorHint="@color/colorButtons">
        <EditText android:id="@+id/input_password"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textPassword"
                  android:hint="Contraseña" android:textColorHint="@color/colorButtons"
                  android:textColorHighlight="@color/colorHeader" android:textColor="@color/colorLightText"
                  android:textCursorDrawable="@color/colorHeader" android:backgroundTint="@color/colorButtons"/>
    </android.support.design.widget.TextInputLayout>


    <Button
            android:text="Iniciar sesión"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btn_login"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_button" android:textColor="@color/colorDarkText"
            android:textSize="18dp"
            android:alpha="0.9" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/btn_login"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>