<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.EventDetailView">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#2660A4"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center_horizontal">
            <TextView
                    android:text="Event Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNameEventDetail" android:layout_marginTop="20dp" android:textColor="#13315C"
                    tools:visibility="visible" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="22sp" android:textStyle="bold"/>
            <TextView
                    android:text="Museum Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtMuseumNameEventDetail" android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="22sp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="212dp" app:srcCompat="@drawable/musuem3"
                    android:id="@+id/imgEventDetail" android:scaleType="fitXY"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="Precio:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
                    android:textSize="16sp"/>
            <TextView
                    android:text="$9.99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtPriceEventDetail" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
            <TextView
                    android:text="Días de atención:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
                    android:textSize="16sp"/>
            <TextView
                    android:text="del 13 al 25 de junio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtBusinessDaysEventDetail" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
            <TextView
                    android:text="Horas de atención:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textStyle="bold"
                    android:textSize="16sp"/>
            <TextView
                    android:text="13 - 18 pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtBusinessHoursEventDetail" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
            <TextView
                    android:text="Esta esuna descripcion del evento:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtDescriptionEventDetail" android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textColor="#13315C"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>