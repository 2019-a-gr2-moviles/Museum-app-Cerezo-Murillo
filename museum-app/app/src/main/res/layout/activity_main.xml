<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/background">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo_museum"
            android:id="@+id/imageView"
            android:scaleType="centerInside" android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:alpha="0.9"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Iniciar sesiÃ³n"
            android:textColor="#11001C"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textSize="18dp" android:id="@+id/btn_to_login" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_to_signup" android:alpha="0.9"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Registarse"
            android:textColor="#11001C"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:textSize="18dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_to_signup" android:alpha="0.9"/>

</android.support.constraint.ConstraintLayout>